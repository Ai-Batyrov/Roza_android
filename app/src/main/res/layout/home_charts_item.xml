<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="100dp"
		android:layout_height="150dp"
		android:layout_marginBottom="8dp"
		android:layout_marginEnd="8dp"
		app:cardCornerRadius="8dp"
		app:cardBackgroundColor="@color/transparency_gray">

	<ImageView
			android:id="@+id/chart_cover"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:src="@drawable/chart_cover"
			tools:ignore="ContentDescription"
			android:layout_gravity="top|center"
			android:layout_marginStart="5dp"
			android:layout_marginTop="5dp"
			android:layout_marginEnd="5dp" />

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_gravity="center|bottom"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="5dp"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			android:orientation="vertical">

		<TextView
				android:id="@+id/chart_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/TextAppearance.AppCompat.Title"
				android:layout_gravity="start|top"
				android:fontFamily="@font/manrope_bold"
				android:textSize="12sp"
				android:text="@string/track_list_item_title"
				android:gravity="start|top"
				android:layout_marginStart="10dp" />

		<TextView
				android:id="@+id/chart_desc"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/TextAppearance.AppCompat.Small"
				android:layout_gravity="start|center"
				android:fontFamily="@font/manrope_bold"
				android:textSize="11sp"
				android:text="@string/track_list_item_artists"
				android:gravity="start|top"
				android:layout_marginStart="10dp" />
	</LinearLayout>

</androidx.cardview.widget.CardView>
