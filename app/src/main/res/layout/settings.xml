<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundcorner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:id="@+id/textViewNameSurname"
        android:layout_width="178dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/aibolat_batyrov"
        android:textColor="#000000 "
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/silver"
        android:text="Edit profile"
        android:textAllCaps="false"
        android:layout_marginLeft="70dp"
        android:textColor="#000000"
        android:letterSpacing="0"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSurname"
        tools:layout_editor_absoluteY="185dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/silver"
        android:text="Log out"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSurname"
        tools:layout_editor_absoluteY="183dp" />

    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/profile"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/colorSchemeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/color_scheme"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/applicationColorThemeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/application_color_theme"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/colorSchemeTextView"
        app:layout_constraintStart_toStartOf="@id/colorSchemeTextView"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:id="@+id/textInputTheme"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintStart_toEndOf="@id/applicationColorThemeTextView"
        app:layout_constraintTop_toBottomOf="@id/colorSchemeTextView"
        app:boxBackgroundColor="#D9D9D9">

        <AutoCompleteTextView
            android:id="@+id/editTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:text="@string/system"
            android:fontFamily="@font/manrope_medium"
            android:textSize="8sp"
            android:textColor="#000000"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/localFilesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/local_files"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/applicationColorThemeTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/showFromDeviceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/files_from_device"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/localFilesTextView"
        app:layout_constraintStart_toStartOf="@id/colorSchemeTextView"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@id/textInputTheme"
        app:layout_constraintEnd_toEndOf="@id/textInputTheme"
        tools:layout_editor_absoluteX="341dp"
        tools:layout_editor_absoluteY="401dp" />

    <TextView
        android:id="@+id/aboutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/about"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/showFromDeviceTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/version"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/aboutTextView"
        app:layout_constraintStart_toStartOf="@id/colorSchemeTextView"/>

    <TextView
        android:id="@+id/versionNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:text="@string/versionNumber"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/versionTextView"
        app:layout_constraintStart_toStartOf="@id/colorSchemeTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>